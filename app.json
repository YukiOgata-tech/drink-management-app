{
  "expo": {
    "name": "Alcohol Log & Event Hub",
    "slug": "drink-management",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": {
      "light": "./assets/images/DMA-icon_light.png",
      "dark": "./assets/images/DMA-icon_dark.png"
    },
    "scheme": "drinkmanagement",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yukiogata-411.drinkmanagement",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "バーコードをスキャンして飲み物の情報を自動入力するためにカメラを使用します",
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/DMA-icon_light.png",
        "backgroundColor": "#ffffff"
      },
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "drinkmanagement",
              "host": "events"
            },
            {
              "scheme": "drinkmanagement",
              "host": "auth"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.CAMERA"
      ],
      "package": "com.yukiogata_411.drinkmanagement"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/DMA-icon_light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/DMA-icon_dark.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "バーコードをスキャンして飲み物の情報を自動入力するためにカメラを使用します"
        }
      ],
      "expo-secure-store",
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
